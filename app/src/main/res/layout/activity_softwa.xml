<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".software">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/cad"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="63dp"
            android:background="#5d5d5d"
            android:text="Cadastro"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/voltartopsoft"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/cad"
            android:layout_marginStart="38dp"
            android:background="#5d5d5d"
            android:text="Tópico"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/consu"
            android:layout_width="122dp"
            android:layout_height="52dp"
            android:layout_alignLeft="@+id/cad"
            android:layout_alignStart="@+id/cad"
            android:layout_alignTop="@+id/repo"
            android:background="#5d5d5d"
            android:text="Consulta"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/rela"
            android:layout_width="122dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cad"
            android:layout_marginBottom="173dp"
            android:background="#5d5d5d"
            android:text="Relatório"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:typeface="monospace"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/log"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/voltartopsoft"
            android:layout_alignTop="@+id/rela"
            android:background="#5d5d5d"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/voltarsoft"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:background="#5d5d5d"
            android:text="Voltar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/repo"
            android:layout_width="122dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/voltartopsoft"
            android:layout_marginTop="162dp"
            android:background="#5d5d5d"
            android:text="Report"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:typeface="monospace" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>