<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@android:style/Theme.Translucent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/voltarcadso"
            android:layout_width="77dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:background="#484848"
            android:lineSpacingExtra="18sp"
            android:text="Voltar"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="388dp"
            android:layout_height="256dp"
            app:srcCompat="@drawable/usuariocsharp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="328dp"
            android:layout_height="153dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="86dp"
            android:text="O cadastro(como o da imagem acima) serve pra cadastrar, editar e excluir dados dos usuários, desenvolvedores e se necessessário, administradores de sistema."
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:typeface="monospace"
            app:fontFamily="monospace"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="298dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>